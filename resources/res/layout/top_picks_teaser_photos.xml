<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_gravity="center" android:background="@drawable/frame" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:translationX="45dp" android:scaleX="0.6" android:scaleY="0.6" android:rotation="10">
        <ImageView android:layout_gravity="center" android:id="@+id/right_pick" android:background="@drawable/frame" android:layout_width="wrap_content" android:layout_height="match_parent" android:alpha="0.5"/>
    </FrameLayout>
    <FrameLayout android:layout_gravity="center" android:background="@drawable/frame" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:translationX="-45dp" android:scaleX="0.6" android:scaleY="0.6" android:rotation="-10">
        <ImageView android:layout_gravity="center" android:id="@+id/left_pick" android:background="@drawable/frame" android:layout_width="wrap_content" android:layout_height="match_parent" android:alpha="0.5"/>
    </FrameLayout>
    <FrameLayout android:layout_gravity="center" android:background="@drawable/frame" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center" android:id="@+id/main_pick" android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </FrameLayout>
</merge>
