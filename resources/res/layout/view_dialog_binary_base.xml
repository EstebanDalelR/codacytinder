<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/linear_container" android:background="@drawable/rounded_rectangle_white" android:layout_width="@dimen/width_dialog" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/dialog_content_padding" android:paddingTop="@dimen/dialog_content_padding" android:paddingRight="@dimen/dialog_content_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@c6248a/img_dialog_icon" android:layout_width="@dimen/dialog_icon_length" android:layout_height="@dimen/dialog_icon_length" android:layout_marginBottom="@dimen/margin_med"/>
        <com.tinder.views.CustomTextView android:id="@+id/txt_dialog_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Title" app:customFontStyle="3" style="@style/dialog_standard_title"/>
    </LinearLayout>
    <ScrollView android:scrollbarStyle="outsideOverlay" android:id="@c6248a/scroll_txt" android:paddingLeft="24dp" android:paddingTop="@dimen/padding_large" android:paddingRight="24dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:overScrollMode="never">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.tinder.views.CustomTextView android:id="@+id/txt_dialog_txt" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="This is content for our dialogs This is a second line." app:customFontStyle="3" style="@style/dialog_standard_body"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_gravity="right" android:orientation="horizontal" android:id="@+id/linear_binary_choices" android:paddingRight="@dimen/padding_med" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.tinder.views.CustomTextView android:textColor="@color/text_light" android:id="@c6248a/txt_choice_one" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Button 1" app:customFontStyle="3" style="@style/dialog_standard_action"/>
        <com.tinder.views.CustomTextView android:id="@c6248a/txt_choice_two" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Button 2" app:customFontStyle="3" style="@style/dialog_standard_action"/>
    </LinearLayout>
    <com.tinder.views.CustomTextView android:layout_gravity="right" android:id="@c6248a/txt_mono_choice" android:padding="@dimen/padding_large" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:customFontStyle="3" style="@style/dialog_standard_action"/>
</LinearLayout>
