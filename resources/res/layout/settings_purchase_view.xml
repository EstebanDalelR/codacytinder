        <include android:id="@c6248a/get_boost" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" layout="@layout/settings_consumable_purchase_button"/>
        <include android:layout_gravity="center" android:id="@c6248a/get_super_likes" android:paddingTop="@dimen/space_s" android:paddingBottom="@dimen/space_s" android:clipChildren="false" android:clipToPadding="false" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/space_xxs" android:layout_weight="1" layout="@layout/settings_consumable_purchase_button"/>
    </LinearLayout>
