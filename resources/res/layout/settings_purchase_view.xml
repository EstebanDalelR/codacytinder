        <com.tinder.views.CustomTextView android:textColor="@color/light_grey3" android:id="@c6248a/gold_subscription_description" android:paddingTop="@dimen/space_xxxs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unlock_out_most_exclusive_features" app:customFontStyle="3" style="@style/SettingsPurchaseDescription"/>
