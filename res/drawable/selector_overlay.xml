<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_pressed="true">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/overlay_selected" />
            <stroke android:width="@dimen/width_border" android:color="@color/blue_light" />
            <corners android:radius="@dimen/photo_selector_radius" />
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="true">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/overlay_pressed" />
            <stroke android:width="@dimen/width_border" android:color="@color/blue_light" />
            <corners android:radius="@dimen/photo_selector_radius" />
        </shape>
    </item>
    <item android:state_selected="true" android:state_pressed="false">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/overlay_selected" />
            <stroke android:width="@dimen/width_border" android:color="@color/blue_light" />
            <corners android:radius="@dimen/photo_selector_radius" />
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="false">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/transparent" />
            <corners android:radius="@dimen/photo_selector_radius" />
        </shape>
    </item>
</selector>